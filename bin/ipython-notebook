#!/usr/bin/env bash
set -e

NOTEBOOKS_PATH="${HOME}/Dropbox/ipython-notebooks"
IPYTHON_PATH="${HOME}/dev/myipy"

if [ ! -d "${NOTEBOOKS_PATH}" ]
then
	mkdir "${NOTEBOOKS_PATH}"
fi
cd "${NOTEBOOKS_PATH}"

IPYTHON=ipython3
if [ -d "${IPYTHON_PATH}" ]
then
	IPYTHON="${IPYTHON_PATH}/.env/bin/jupyter"
	echo "my own ipython"
fi

source ${IPYTHON_PATH}/.env/bin/activate
${IPYTHON} notebook --script --matplotlib=inline
