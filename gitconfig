[alias]
   ci = commit
   co = checkout
   up = pull --rebase -q
   psh = push -q
   st = status
   adu = add -u
   bvv = branch -vv
   wd = diff --color-words
   conflict = !"$EDITOR" -c '/^[<=|>]\\{7\\}' `git ls-files --unmerged | cut -c 51- | uniq`
   lg = log --decorate --graph --name-status
   lg1 = log --decorate --graph --oneline
   stats = shortlog -s -n
[diff]
   renames = copies
[user]
   name = Andreas Zwinkau
# email differs between personal and professional use,
# so i cannot just symlink this file to ~/.gitconfig
#  email = ...
[color]
   ui = auto
[color "branch"]
   current = yellow reverse
   local = yellow
   remote = green
[color "diff"]
   meta = yellow bold
   frag = magenta bold
   old = red bold
   new = green bold
[color "status"]
   added = yellow
   changed = green
   untracked = cyan
[color "diff"]
   whitespace = red reverse
[core]
   whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
   excludesfile = ~/.gitignore
[push]
   default = tracking
