[alias]
   ci = commit
   ca = commit -a
   fix = commit -a --amend
   fixup = commit -a -m "fixup"
   co = checkout
   up = pull --rebase -q
   ftch = fetch --all -q
   psh = push -q
   st = status -s -b
   adu = add -u
   bv = branch -vv
   wd = diff --color-words
   conflict = !"$EDITOR" -c '/^[<=|>]\\{7\\}' `git ls-files --unmerged | cut -c 51- | uniq`
   lg = log --decorate --graph --name-status
   l = log --decorate --graph --oneline
   stats = shortlog -s -n
   clear = checkout -p .
   staged = diff --cached
   conti = rebase --continue
[diff]
   renames = copies
[user]
   name = Andreas Zwinkau
# email differs between personal and professional use,
# so i cannot just symlink this file to ~/.gitconfig
#  email = ...
[color]
   ui = auto
[color "branch"]
   current = yellow reverse
   local = yellow
   remote = green
[color "diff"]
   meta = yellow bold
   frag = magenta bold
   old = red bold
   new = green bold
[color "status"]
   added = yellow
   changed = green
   untracked = cyan
[color "diff"]
   whitespace = red reverse
[core]
   whitespace=fix,trailing-space,cr-at-eol
   excludesfile = ~/.gitignore
[push]
   default = tracking
